{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "lib": ["es2017", "DOM"],
    "allowJs": true,
    "declaration": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["./*.ts", "./**/*.ts"],
  "exclude": ["**/node_modules/**", "./packages/**/build"]
}
